<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/social_media"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_image_dim"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_left_right">

        <ImageView
            style="@style/SocialMedia"
            android:onClick="onClickDial"
            android:src="@drawable/call" />

        <ImageView
            style="@style/SocialMedia"
            android:onClick="onClickInsta"
            android:src="@drawable/instagram" />

        <ImageView
            style="@style/SocialMedia"
            android:onClick="onClickFcbk"
            android:src="@drawable/facebook" />


    </LinearLayout>

    <ImageView
        android:id="@+id/watermark"
        android:layout_width="@dimen/watermark_dim"
        android:layout_height="@dimen/watermark_dim"
        android:layout_above="@id/social_media"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:src="@drawable/pop" />


</RelativeLayout>