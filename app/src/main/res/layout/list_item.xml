<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ListViewLayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/margin_left_right"
              android:background="@color/color_white"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/item_image_dim"
        android:layout_height="@dimen/item_image_dim"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_weight="0"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="@dimen/layout_width_list"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginStart="@dimen/margin_left_right"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/default_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:textColor="@color/color_black"
            tools:text="@string/list_item_txt_placeholder"/>

        <TextView
            android:id="@+id/ingredients_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
            android:textColor="@color/grey"
            tools:text="@string/list_item_txt_placeholder"/>

    </LinearLayout>


    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"
        tools:text="@string/list_item_txt_placeholder"/>


</LinearLayout>